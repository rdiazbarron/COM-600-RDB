<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>tabla</title>
    <style>
        table {
            width: 50%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: center;
        }
        .row-odd {
            background-color: #ffe4e1;
        }
        .row-even {
            background-color: #ffffff; 
        }
    </style>
</head>
<body>

    <h2>Generador</h2>
    <form action="/calcular" method="POST">
        <label for="numero">Numero:</label>
        <input type="number" id="numero" name="numero" required>

        <label for="inicio">Inicio:</label>
        <input type="number" id="inicio" name="inicio" required>

        <label for="fin">Fin:</label>
        <input type="number" id="fin" name="fin" required>

        <label for="operacion">Operación:</label>
        <select id="operacion" name="operacion">
            <option value="sumar">Suma</option>
            <option value="restar">Resta</option>
            <option value="multiplicar">Multiplicación</option>
            <option value="dividir">División</option>
        </select>

        <button type="submit">Generar Tabla</button>
    </form>

    <% if (resultados) { %>
        <table>
            <thead>
                <tr>
                    <th>Número</th>
                    <th>Operación</th>
                    <th>Valor</th>
                    <th>=</th>
                    <th>Resultado</th>
                </tr>
            </thead>
            <tbody>
                <% resultados.forEach((row, index) => { %>
                    <tr class="<%= index % 2 === 0 ? 'row-even' : 'row-odd' %>">
                        <td><%= row.numero %></td>
                        <td><%= row.simbolo %></td>
                        <td><%= row.i %></td>
                        <td>=</td>
                        <td><%= row.resultado %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } %>

</body>
</html>